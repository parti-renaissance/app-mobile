<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="colorControlActivated">@color/blue_ribbon</item>
        <item name="android:colorEdgeEffect">@color/spunPearl</item>
        <item name="android:textColorHighlight">#D3E3FF</item>
        <!-- Fix https://github.com/facebook/react-native/issues/17530#issuecomment-896743065 -->
        <item name="android:editTextBackground">@drawable/edit_text</item>
    </style>

    <style name="SplashTheme">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
    </style>

</resources>
